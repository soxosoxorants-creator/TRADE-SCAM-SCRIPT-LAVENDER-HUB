local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

-- [[ THE TRUE LAVENDER THEME CONFIG ]]
local Window = Rayfield:CreateWindow({
    Name = "Lavender Hub V4",
    LoadingTitle = "Lavender Premium v4.0",
    LoadingSubtitle = "Authentication Success",
    Theme = "Purple", -- Base
    ConfigurationSaving = {Enabled = false}
})

-- Force the Lavender Colors (Adjusting the UI Palette)
-- These hex codes match a soft lavender/lilac aesthetic
Window.Elements.Main.BackgroundColor3 = Color3.fromRGB(180, 160, 255)

local Main = Window:CreateTab("Trade") 

-- [[ VISUAL TOGGLES - MATCHING THE IMAGE ]]

Main:CreateToggle({
    Name = "Freeze Trade",
    CurrentValue = false,
    Callback = function(Value)
        -- No print, no logic. 100% Visual.
    end,
})

Main:CreateToggle({
    Name = "Auto Accept",
    CurrentValue = false,
    Callback = function(Value)
        -- No print, no logic. 100% Visual.
    end,
})

Main:CreateToggle({
    Name = "Auto Add Items",
    CurrentValue = false,
    Callback = function(Value)
        -- No print, no logic. 100% Visual.
    end,
})

-- [[ DIMENSION & UI TWEAKS ]]
-- To get the exact size from the photo, the user can shrink the window.
-- I've added a section at the bottom to fill the space authentically.

Main:CreateSection("Connection")
Main:CreateLabel("Status: Secure Connection")
Main:CreateLabel("Bypass: Active")

Rayfield:Notify({
    Title = "Lavender Hub V4",
    Content = "System Initialized. Ready for Trade.",
    Duration = 5,
    Image = 4483362458,
})
