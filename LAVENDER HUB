-- [[ Direct Rayfield Source - No External Handshake Needed ]]
local Rayfield = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Rayfield/main/source'))()

local Window = Rayfield:CreateWindow({
   Name = "Lavender Hub V4",
   LoadingTitle = "Lavender V4",
   LoadingSubtitle = "Trade Suite",
   ConfigurationSaving = {
      Enabled = false
   },
   Discord = {
      Enabled = false
   },
   KeySystem = false 
})

-- [[ THE TAB ]]
local Main = Window:CreateTab("Main") -- Only one tab to keep it small

-- [[ THE TOGGLES FROM YOUR PICTURE ]]
Main:CreateToggle({
   Name = "Freeze Trade",
   CurrentValue = false,
   Flag = "Toggle1",
   Callback = function(Value)
      -- Visual Only
   end,
})

Main:CreateToggle({
   Name = "Auto Accept",
   CurrentValue = false,
   Flag = "Toggle2",
   Callback = function(Value)
      -- Visual Only
   end,
})

Main:CreateToggle({
   Name = "Auto Add Items",
   CurrentValue = false,
   Flag = "Toggle3",
   Callback = function(Value)
      -- Visual Only
   end,
})

-- [[ STATUS LABELS TO LOOK REAL ]]
Main:CreateSection("Connection Status")

Main:CreateLabel("Status: Secure")
Main:CreateLabel("Anti-Cheat Bypass: Active")

-- [[ FORCE DIMENSIONS & THEME ]]
-- Note: Rayfield "Purple" is the Lavender preset.
