local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

-- [[ THE WINDOW - FORCED LAVENDER & COMPACT ]]
local Window = OrionLib:MakeWindow({
    Name = "Lavender Hub V4", 
    HidePremium = true, 
    SaveConfig = false, 
    IntroText = "Lavender Premium",
    ConfigFolder = "LavenderV4"
})

-- [[ THE MAIN TAB ]]
local Main = Window:MakeTab({
    Name = "Trade",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- [[ FAKE TARGETING SYSTEM ]]
local PlayerList = {}
for _, v in pairs(game.Players:GetPlayers()) do
    if v ~= game.Players.LocalPlayer then
        table.insert(PlayerList, v.Name)
    end
end

Main:AddDropdown({
    Name = "Target Player",
    Default = "Select User...",
    Options = PlayerList,
    Callback = function(Value)
        -- Visual Only
    end    
})

-- [[ THE TOGGLES FROM YOUR PICTURE ]]
Main:AddToggle({
    Name = "Freeze Trade",
    Default = false,
    Callback = function(Value)
        -- Visual Only
    end
})

Main:AddToggle({
    Name = "Auto Accept",
    Default = false,
    Callback = function(Value)
        -- Visual Only
    end
})

Main:AddToggle({
    Name = "Auto Add Items",
    Default = false,
    Callback = function(Value)
        -- Visual Only
    end
})

-- [[ STATUS SECTION ]]
local Section = Main:AddSection({
    Name = "Connection Status"
})

Main:AddLabel("Status: Securely Connected")
Main:AddLabel("Bypass: Wave/Solara V3")

-- Initialize
OrionLib:Init()

