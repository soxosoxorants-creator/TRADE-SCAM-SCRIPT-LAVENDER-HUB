    CurrentValue = false,
    Callback = function(Value)
        -- Visual Only
    end,
})

Main:CreateToggle({
    Name = "Auto Add Items",
    CurrentValue = false,
    Callback = function(Value)
        -- Visual Only
    end,
})

-- [[ VISUAL STATUS SECTION ]]
Main:CreateSection("System Status")

